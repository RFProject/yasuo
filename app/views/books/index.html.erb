<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Turn</th>
      <th>Released at</th>
      <th>Description</th>
      <th>Image</th>
      <th>Series</th>
      <th>Amazon url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.turn %></td>
        <td><%= book.released_at %></td>
        <td><%= book.description %></td>
        <td><%= book.image %></td>
        <td><%= book.series_id %></td>
        <td><%= book.amazon_url %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

