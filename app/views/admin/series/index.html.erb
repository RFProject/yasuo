<p id="notice"><%= notice %></p>

<h1>Listing Series<%= link_to 'New Series', new_admin_series_path, class: :'btn btn-success' %></h1>
<table>
<div class="col-md-6">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Image</th>
        <th width="150">Name</th>
        <th>Author</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @series.each do |series| %>
      <tr>
        <td><%= image_tag series.image,:class => 'image' %></td>
        <td><%= series.name %></td>
        <td><%= series.author %></td>
        <td><%= series.description %></td>
        <td><%= link_to '巻追加', new_admin_series_book_path(series), class: :'btn btn-success'%></td>
        <td><%= link_to 'Show', admin_series_path(series) %></td>
        <td><%= link_to 'Edit', edit_admin_series_path(series) %></td>
        <td><%= link_to 'Destroy', series, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</table>
<br>
