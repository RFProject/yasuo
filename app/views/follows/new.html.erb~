<h1>Follow <%= @series.name %></h1>
<%= form_for [@series, @follow] do |f| %>
  <% if @follow.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@follow.errors.count, "error") %> prohibited this follow from being saved:</h2>

      <ul>
      <% @follow.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= image_tag(@series.image) %>
  <div class="actions", >
    <%= f.submit, :class => 'btn btn-lg btn-primary' %>
  </div>
<% end %>
<%= link_to 'Back', series_index_path %>
